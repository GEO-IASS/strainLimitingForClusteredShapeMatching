<integrator type="adaptive">
<integer name="maxSampleFactor" value="8" />
<integrator type="path" />
</integrator>
<sensor type="perspective">
    <float name="farClip" value="50"/>
    <float name="focusDistance" value="4.86293"/>
    <float name="fov" value="20"/>
    <string name="fovAxis" value="x"/>
    <float name="nearClip" value="0.0205208"/>
    <transform name="toWorld">

        <lookat target="0, 0, 0" origin="-2.0, 0, 4" up="0, 1, 0"/>
    </transform>

    <sampler type="independent">
        <integer name="sampleCount" value="80"/>
    </sampler>

    <film type="hdrfilm">
        <integer name="height" value="540"/>
        <integer name="width" value="960"/>
		<boolean name="banner" value="false"/>
        <rfilter type="gaussian"/>
    </film>
</sensor>
